<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/manage_users"
            android:background="@drawable/ractanglecard"

            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/icon_manageuser"
                android:layout_gravity="center_vertical"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Users"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_gravity="center">

            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
        android:id="@+id/manage_car"
            android:background="@drawable/ractanglecard"
            android:layout_below="@id/manage_users"

            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/car"
                android:layout_gravity="center_vertical"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Car List"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_gravity="center">

            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/logout"
            android:layout_below="@id/manage_car"
            android:background="@drawable/ractanglecard"

            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/out"
                android:layout_gravity="center_vertical"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_gravity="center">

            </TextView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>