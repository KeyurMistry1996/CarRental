<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/history_cars_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:dividerHeight="0.0px"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/history_vehicles_image"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/history_vehicles_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/history_vehicles_image"
                android:layout_marginStart="10dp"
                android:text="Hyundai sonata"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/history_vehicles_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_vehicles_image"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="Confirmed"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp" />

            <RatingBar
                android:id="@+id/history_vehicles_rate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/history_vehicles_name"
                android:foregroundGravity="left"
                android:numStars="5"
                android:scaleX=".5"
                android:scaleY=".5"
                android:transformPivotX="20dp"
                android:transformPivotY="10dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>